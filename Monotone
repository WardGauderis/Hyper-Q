#ifndef HYPER_Q_MONOTONE_
#define HYPER_Q_MONOTONE_

#include <cmath>
#include "Agent.h"

class Monotone : public Agent {
public:
    explicit Monotone(const Strategy &strategy) : strategy(strategy) {}

    std::tuple<Action, Strategy, Reward> act() override {

        return {strategy_to_action(strategy), strategy, NAN};
    }

    void observe(Reward r, Action action_x, Strategy x, Action action_y, Strategy y) override {
        (void)r;
        (void)x;
        (void)action_y;
        (void)y;
    }

private:
    Strategy strategy;

};

#endif //HYPER_Q_MONOTONE_
